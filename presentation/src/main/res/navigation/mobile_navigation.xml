    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.balyaba.genesisgithubapp.features.repositories.RepositoriesFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_repositories" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.balyaba.genesisgithubapp.features.favorites.FavoritesFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_favorites" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.balyaba.genesisgithubapp.features.about.AboutFragment"
        android:label="@string/title_notifications"
